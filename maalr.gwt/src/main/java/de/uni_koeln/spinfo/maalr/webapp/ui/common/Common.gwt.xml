<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='de.uni_koeln.spinfo.maalr.core'>
  <!-- Inherit the core Web Toolkit stuff.                        -->
 
  <!-- Inherit the default GWT style sheet.  You can change       -->
  <!-- the theme of your GWT application by uncommenting          -->
  <!-- any one of the following lines.                            -->
  <!-- <inherits name='com.google.gwt.user.theme.clean.Clean'/> -->
  <inherits name="com.github.gwtbootstrap.Bootstrap" />
  <inherits name="com.github.gwtbootstrap.datepicker.Datepicker" />
  
  <set-property name="bootstrap.responsiveDesign" value="true"/>

  <!-- Specify the paths for translatable code                    -->
  <source path='client'/>
  <source path='shared'/>

   <!-- Enable to use custom bootstrap files. -->
   <!-- Currently disabled as user pages should be moved to bootstrap first. -->
   
   <source path='resources'/>
    <replace-with class="de.uni_koeln.spinfo.maalr.webapp.ui.common.resources.MaalrBootstrapConfigurator">
        <when-type-is class="com.github.gwtbootstrap.client.ui.config.Configurator"/>
    </replace-with>
    <public path="resources">
        <exclude name="** /*.java"/>
        <exclude name="** /*.class"/>
    </public>
 
 	<stylesheet src='../assets/style/user_style.css' />

</module>
