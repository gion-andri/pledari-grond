<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:gwtbootstrap="urn:import:com.github.gwtbootstrap.client.ui">
	
	<g:HTMLPanel>
			<gwtbootstrap:Well>
			
			<gwtbootstrap:Label>Index</gwtbootstrap:Label>
			<gwtbootstrap:Paragraph />
			<gwtbootstrap:ProgressBar visible="false" ui:field="busyIndicator" />
			<gwtbootstrap:Paragraph />
			
			<g:HorizontalPanel>
					<g:cell>
						<gwtbootstrap:Paragraph ui:field="indexInfos"/>
					</g:cell>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:cell>
					<gwtbootstrap:ButtonGroup ui:field="leftGroup">
						<gwtbootstrap:Button ui:field="updateStats" text="Refresh" size="SMALL" type="PRIMARY" />
					</gwtbootstrap:ButtonGroup>
				</g:cell>
				<g:cell>
					<gwtbootstrap:ButtonGroup ui:field="rightGroup">
						<gwtbootstrap:Button ui:field="reload" text="Rebuild" size="SMALL" type="DANGER" />
					</gwtbootstrap:ButtonGroup>
				</g:cell>
			</g:HorizontalPanel>
				
			</gwtbootstrap:Well>
	</g:HTMLPanel>
	
</ui:UiBinder> 