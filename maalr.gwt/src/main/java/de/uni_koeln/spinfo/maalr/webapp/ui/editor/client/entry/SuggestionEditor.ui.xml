<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m3="urn:import:de.uni_koeln.spinfo.maalr.webapp.ui.editor.client.entry.filter"
	xmlns:m2="urn:import:de.uni_koeln.spinfo.maalr.webapp.ui.editor.client.entry.list"
	xmlns:c="urn:import:de.uni_koeln.spinfo.maalr.webapp.ui.common.client"
	xmlns:gwtbootstrap="urn:import:com.github.gwtbootstrap.client.ui">
	
	<ui:with field='i18n' type='de.uni_koeln.spinfo.maalr.webapp.ui.editor.client.EditorUiBinderMessages' />
	
	<ui:style>
		.listLegend {
			min-height: 36px;
			line-height: 36px;
			font-size: 19.5px;
		}
		
		.listHeader {
			width: 100%;
			margin-bottom: 15px;
			border-bottom: 1px solid #e5e5e5;
		}
		
		.buttongroup {
			float: right;
		}
		
		.export {
			margin-right: 20px;
		}
	</ui:style>
	<gwtbootstrap:FluidContainer>
		<gwtbootstrap:FluidRow>
			<gwtbootstrap:Column size="5">
				<g:VerticalPanel width="100%">
					<g:cell>
						<m3:ListFilter ui:field="listFilter"></m3:ListFilter>
					</g:cell>
					<g:cell>
						<gwtbootstrap:Well>
							<g:VerticalPanel width="100%" height="100%">
								<gwtbootstrap:Legend title="{i18n.lemmaHistory}"></gwtbootstrap:Legend>
								<m2:EntryVersionsList ui:field="historyList"
									width="100%" height="400px"></m2:EntryVersionsList>
								<g:HorizontalPanel width="100%">
									<gwtbootstrap:ButtonGroup>
										<gwtbootstrap:Button toggle="true" text="{i18n.showAll}"
											icon="EYE_OPEN" ui:field="fullHistory"></gwtbootstrap:Button>
									</gwtbootstrap:ButtonGroup>
									<gwtbootstrap:ButtonGroup ui:field="deleteOldGroup">
										<gwtbootstrap:Button text="{i18n.deleteHistory}"
											ui:field="deleteHistory" type="DANGER" icon="TRASH"></gwtbootstrap:Button>
									</gwtbootstrap:ButtonGroup>
								</g:HorizontalPanel>
							</g:VerticalPanel>
						</gwtbootstrap:Well>
					</g:cell>
				</g:VerticalPanel>
			</gwtbootstrap:Column>
			<gwtbootstrap:Column size="7" ui:field="editArea">
				<gwtbootstrap:Well>
					<g:FlowPanel>
						<g:HorizontalPanel styleName="{style.listHeader}">
							<g:cell horizontalAlignment="ALIGN_LEFT">
								<g:Label ui:field="listLegend" styleName="{style.listLegend}"></g:Label>
							</g:cell>
							<g:cell horizontalAlignment="ALIGN_RIGHT">
								<g:HorizontalPanel>
									<gwtbootstrap:Button ui:field="newEntry"
										icon="PLUS_SIGN" text="{i18n.newEntry}" styleName="btn {style.export}"></gwtbootstrap:Button>
									<gwtbootstrap:Button icon="DOWNLOAD"
										ui:field="export" text="{i18n.export}" styleName="btn {style.export}"></gwtbootstrap:Button>
									<gwtbootstrap:DropdownButton
										ui:field="columns" icon="COLUMNS" title="{i18n.configureColumns}"
										text="{i18n.columns}"></gwtbootstrap:DropdownButton>
								</g:HorizontalPanel>
							</g:cell>
						</g:HorizontalPanel>
						<g:Label ui:field="resultSummary"></g:Label>
						<m2:AllEntriesList ui:field="entryList" width="100%"
							height="750px"></m2:AllEntriesList>
						<g:HorizontalPanel width="100%" ui:field="pagination"></g:HorizontalPanel>
						<g:HorizontalPanel width="100%">
							<gwtbootstrap:ButtonGroup ui:field="toggleSelectGroup">
								<gwtbootstrap:Button text="{i18n.multiSelectBtn}"
									ui:field="toggleMultiSelect" toggle="true"></gwtbootstrap:Button>
								<gwtbootstrap:Button text="{i18n.selectAllBtn}"
									ui:field="selectAll"></gwtbootstrap:Button>
								<gwtbootstrap:Button text="{i18n.deselectAllBtn}"
									ui:field="deselectAll"></gwtbootstrap:Button>
							</gwtbootstrap:ButtonGroup>
							<gwtbootstrap:ButtonGroup ui:field="deleteEntriesGroup">
								<!-- <gwtbootstrap:Button text="Accept selected" type="PRIMARY" icon="THUMBS_UP" 
									ui:field="acceptAll"></gwtbootstrap:Button> -->
								<gwtbootstrap:Button text="{i18n.rejectSelectedBtn}"
									type="DANGER" icon="THUMBS_DOWN" ui:field="rejectAll"></gwtbootstrap:Button>
							</gwtbootstrap:ButtonGroup>
						</g:HorizontalPanel>
					</g:FlowPanel>
				</gwtbootstrap:Well>
			</gwtbootstrap:Column>
		</gwtbootstrap:FluidRow>
	</gwtbootstrap:FluidContainer>

</ui:UiBinder> 