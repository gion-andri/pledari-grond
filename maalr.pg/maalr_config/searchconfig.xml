                        <modification>${field}</modification>
                    </field>
                    <value from="grammar">
                        <modification>${phrase}</modification>
                    </value>
    			
    			</queryModifier>
    		</queryModifiers>
    	</queryModifier>
    	<queryModifier id="sigMod" reference="category">
    		<queryModifiers>
    			<queryModifier id="default" default="true"  transformer="de.uni_koeln.spinfo.maalr.lucene.config.interpreter.modifier.DefaultQueryBuilder">
