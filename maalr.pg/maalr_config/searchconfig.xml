    <textFields>
    	<textField id="searchPhrase"></textField>
    	<textField id="category"></textField>
    	<textField id="subSemantics"></textField>
    	<textField id="gender"></textField>
    	<textField id="grammar"></textField>
    </textFields>
    <fieldChoices>
        <fieldChoice id="language" valueOf="searchPhrase">
            <options id="both" default="true">
                <fields>
                    <field reference="DStichwort_search"/>
                    <field reference="RStichwort_search"/>
                </fields>
            </options>
            <options id="romansh">
                <fields>
                    <field reference="RStichwort_search"/>
                </fields>
            </options>
            <options id="german">
                <fields>
                    <field reference="DStichwort_search"/>
                </fields>
            </options>
        </fieldChoice>
        <fieldChoice id="sigChoice" valueOf="category">
        	<options id="default" default="true">
        		<fields>
					<field reference="Bearbeitungshinweis"/>        		
        		</fields>
        	</options>
        </fieldChoice>
<!-- enable oracle search in editor popup, also needs reference to a queryModifier -->
        <fieldChoice id="sigChoice_editorPopup" valueOf="Bearbeitungshinweis">
        	<options id="default" default="true">
        		<fields>
					<field reference="Bearbeitungshinweis"/>        		
        		</fields>
        	</options>
        </fieldChoice>
        <fieldChoice id="subSemChoice" valueOf="subSemantics">
        	<options id="default" default="true">
        		<fields>
					<field reference="DSubsemantik"/>
					<field reference="RSubsemantik"/>        		
        		</fields>
        	</options>
        </fieldChoice>
<!-- enable oracle search for field DSubsemantik in editor popup, also needs reference to a queryModifier -->
