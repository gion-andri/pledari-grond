                        <modification>${field}</modification>
                    </field>
                    <value from="category">
                        <modification>${phrase}</modification>
                    </value>

    			</queryModifier>
    		</queryModifiers>
    	</queryModifier>
<!-- The following is needed to enable oracle search in lexicon editor widget (see definition of sigChoice_editorPopup above) -->
