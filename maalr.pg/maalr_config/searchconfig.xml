    <queryModifiers>
    	<queryModifier id="genMod" reference="gender">
    		<queryModifiers>
   				<queryModifier id="default" default="true"  transformer="de.uni_koeln.spinfo.maalr.lucene.config.interpreter.modifier.SimplePrefixQueryBuilder">
    				<field from="genChoice">
                        <modification>${field}</modification>
                    </field>
                    <value from="gender">
                        <modification>${phrase}</modification>
                    </value>
    			
    			</queryModifier>
    		</queryModifiers>
    	</queryModifier>
    	<queryModifier id="gramMod" reference="grammar">
    		<queryModifiers>
    			<queryModifier id="default" default="true"  transformer="de.uni_koeln.spinfo.maalr.lucene.config.interpreter.modifier.SimplePrefixQueryBuilder">
