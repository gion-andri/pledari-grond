							<value>n(f)</value>
							<value>n(pl)</value>
							<value>n,f</value>
							<value>n,m</value>
							<value>pl</value>
						</allowed>
					</field>
					<field dbId="DSubsemantik" type="ORACLE"></field>
					<field dbId="Bearbeitungshinweis" type="ORACLE"></field>
				</fields>
			</backend_editor>
		</editors>
		<results>
			<fields>
				<field idxId="DStichwort" format="{0}"></field>
				<field idxId="DSubsemantik" format="({0})"></field>
				<field idxId="DGenus" format="&lt;i&gt;[{0}]&lt;/i&gt;"></field>
			</fields>
			<sort_order>
				<fields>
					<field idxId="DStichwort_search_exact"></field>
					<field idxId="DStichwort_sort"></field>
				</fields>
			</sort_order>
		</results>
		<dictionary>
			<field idxId="DStichwort_search_exact"></field>		
